  body
    header#page-header
      nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
        div.container
          .navbar-header
            a.navbar-brand.logo(href='index.html')
              img(src='assets/images/pryv-logo.png', alt='Pryv')
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#main-nav')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          #main-nav.collapse.navbar-collapse
            mixin menuItem(linkId)
              - var pageData = pages[linkId]
              - var activeClass = id === pageData.id ? 'active' : ''
              li(class=activeClass)
                a(href='#{pageData.id}.html')= pageData.title

            ul.nav.navbar-nav
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown') Code <b class="caret"></b>
                ul.dropdown-menu
                  +menuItem('code-general')
                  +menuItem('code-javascript')
                  +menuItem('code-java')
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown') User experience <b class="caret"></b>
                ul.dropdown-menu
                  +menuItem('ux-wording')
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown') Collaboration <b class="caret"></b>
                ul.dropdown-menu
                  +menuItem('collaboration-development-cycles')
                  +menuItem('collaboration-meetings')
                  +menuItem('collaboration-definitions-of-ready')
                  +menuItem('collaboration-definitions-of-done')

    #main-wrapper.container
      #main!= yield

    footer#page-footer
      nav.navbar.navbar-default
        div.container
          #footer-nav
            ul.nav.navbar-nav
              li: a(href='http://github.com/pryv/guidelines/issues') Report issues/suggestions
              li#fork-on-github: a(href='http://github.com/pryv/guidelines') Fork me on GitHub

